<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ReactionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/reaction_view_bg</item>
        <item name="rv_textColor">@color/black</item>
        <item name="rv_textSize">16sp</item>
    </style>

    <style name="ReactionStyle.MessageIn">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ReactionStyle.MessageOut">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="BottomSheetReactionStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">36sp</item>
    </style>

</resources>