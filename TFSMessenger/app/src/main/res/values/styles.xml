<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ReactionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/reaction_view_bg</item>
        <item name="rv_textColor">@color/reaction_text_color</item>
        <item name="rv_textSize">14sp</item>
    </style>

    <style name="ReactionStyle.MessageIn">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ReactionStyle.MessageOut">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="BottomSheetReactionStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ChannelsTabStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AttachmentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:textColor">@color/message_text_color</item>
        <item name="drawableStartCompat">@drawable/ic_baseline_get_app_24</item>
    </style>

</resources>